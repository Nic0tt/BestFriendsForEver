<script>
    import WeatherLottieIcon from "./lib/WeatherLottieIcon.svelte";
    import Slider from "./lib/Slider.svelte";

    // --- STATE MANAGEMENT (Svelte 5) ---
    let dailyForecasts = $state([]);
    let backgroundVideo = $state("");
    let city = $state("Heilbronn");
    let weatherData = $state([]);
    let loading = $state(false);
    let error = $state(null);
    let selectedDayIndex = $state(0);
    let showVoiceHint = $state(true);

    const TRIGGER_WORD = "Wetter";

    // --- WETTER LOGIK ---
    async function fetchWeatherData(cityName) {
        if (!cityName?.trim()) return;
        loading = true;
        error = null;

        try {
            const response = await fetch(`http://localhost:8080/api/weather/${cityName}`);
            if (!response.ok) throw new Error(`Stadt ${cityName} nicht gefunden`);
            
            const newWeatherData = await response.json();
            weatherData = newWeatherData;
            processWeatherData();
        } catch (err) {
            console.error("Fehler:", err);
            error = err.message;
            weatherData = [];
            dailyForecasts = [];
        } finally {
            loading = false;
        }
    }

    function processWeatherData() {
        if (!weatherData || weatherData.length === 0) {
            dailyForecasts = [];
            return;
        }

        dailyForecasts = weatherData.map((item) => ({
            date: new Date(item.forecastDate),
            city: item.city,
            temperature: item.temperature,
            minTemperature: item.minTemperature,
            maxTemperature: item.maxTemperature,
            humidity: item.humidity,
            pressure: item.pressure || 0,
            windSpeed: item.windSpeed || 0,
            pop: item.pop || 0,
            description: formatGermanWeatherDescription(item.description),
            iconCode: item.iconCode,
            weatherCondition: getWeatherConditionFromIcon(item.iconCode),
        }));

        selectedDayIndex = 0;
        setVideo(dailyForecasts[0].weatherCondition);
    }

    function setVideo(condition) {
        const videoMap = {
            rain: "/videos/rain.mp4",
            clear: "/videos/clear.mp4",
            lightCloudy: "/videos/lightCloudy.mp4",
            cloudy: "/videos/cloudy.mp4",
            snow: "/videos/snow.mp4"
        };
        backgroundVideo = videoMap[condition] || "";
    }

    function getWeatherConditionFromIcon(icon) {
        const map = { "01": "clear", "02": "lightCloudy", "03": "lightCloudy", "04": "cloudy", "09": "rain", "10": "rain", "11": "storm", "13": "snow", "50": "fog" };
        return map[icon.substring(0, 2)] || "default";
    }

    function formatGermanWeatherDescription(desc) {
        return desc.charAt(0).toUpperCase() + desc.slice(1);
    }

    function formatDate(date) {
        return new Date(date).toLocaleDateString("de-DE", { weekday: "long", day: "numeric", month: "long" });
    }

    $effect(() => {
        if (city) fetchWeatherData(city);
    });
</script>

<main>
    {#if backgroundVideo}
        {#key backgroundVideo}
            <video class="background-video" autoplay muted loop playsinline>
                <source src={backgroundVideo} type="video/mp4"/>
            </video>
        {/key}
    {/if}

    <div class="weather-app">
        <div class="app-content-wrapper">
            
            <div class="app-header">
                <h1>Wetter Vorhersage</h1>
                {#if showVoiceHint}
                    <div class="voice-hint">
                        <span>üí° Sage "{TRIGGER_WORD} [Stadtname]"</span>
                        <button onclick={() => showVoiceHint = false}>√ó</button>
                    </div>
                {/if}
            </div>

            {#if loading}
                <div class="loading-spinner"></div>
            {:else if dailyForecasts.length > 0}
                {@const current = dailyForecasts[selectedDayIndex]}

                <div class="today-weather-card">
                    <div class="date">{formatDate(current.date)}</div>
                    <div class="city-name-display">{current.city}</div>
                    
                    <div class="weather-main">
                        <div class="temp-section">
                            <div class="current-temp">{Math.round(current.temperature)}¬∞C</div>
                            <div class="min-max">
                                <span class="min">‚Üì {Math.round(current.minTemperature)}¬∞</span>
                                <span class="max">‚Üë {Math.round(current.maxTemperature)}¬∞</span>
                            </div>
                        </div>
                        
                        <div class="icon-section">
                            <WeatherLottieIcon condition={current.weatherCondition}/>
                            <div class="description">{current.description}</div>
                        </div>
                    </div>

                    <div class="extra-details">
                        <div class="detail-box">
                            <span class="label">Wind</span>
                            <span class="value">{current.windSpeed.toFixed(1)} km/h</span>
                        </div>
                        <div class="detail-box">
                            <span class="label">Luftdruck</span>
                            <span class="value">{current.pressure} hPa</span>
                        </div>
                        <div class="detail-box">
                            <span class="label">Feuchtigkeit</span>
                            <span class="value">{current.humidity}%</span>
                        </div>
                        <div class="detail-box">
                            <span class="label">Regenrisiko</span>
                            <span class="value">{Math.round(current.pop * 100)}%</span>
                        </div>
                    </div>
                </div>

                <div class="map-wrapper">
                    <iframe
                        title="Google Maps Satellit"
                        width="100%"
                        height="350"
                        style="border:0;"
                        loading="lazy"
                        src="https://maps.google.com/maps?q={encodeURIComponent(current.city)}&t=k&z=10&ie=UTF8&iwloc=&output=embed">
                    </iframe>
                </div>

                {#if dailyForecasts.length > 1}
                    <div class="next-days-header">Kommende Tage</div>
                    <Slider items={dailyForecasts.slice(1)}/>
                {/if}

            {:else if error}
                <div class="error-message">‚ö†Ô∏è {error}</div>
            {/if}
        </div>
    </div>
</main>

